{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["es6"],
		"typeRoots": ["./@types","node_modules/@types"],
		"allowJs": true,
		"outDir": "build",
		"rootDir": "src",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"strictNullChecks": false,
		"downlevelIteration": true,
		"experimentalDecorators": true,
	},
	"include": ["src/**/*.ts"]
}
